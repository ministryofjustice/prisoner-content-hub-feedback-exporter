{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": false,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "ignoreDeprecations": "5.0",
    "typeRoots": ["job/@types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "assets/**/*.js", "integration_tests", "dist", "eslint.config.mjs"],
  "include": ["**/*.js", "**/*.ts"]
}
