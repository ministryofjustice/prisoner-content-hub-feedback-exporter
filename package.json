{
  "name": "prisoner-content-hub-feedback-exporter",
  "version": "0.0.1",
  "description": "Prisoner Content Hub Feedback Exporter",
  "repository": "git@github.com:ministryofjustice/prisoner-content-hub-feedback-exporter.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "start": "node dist/run.js | bunyan -o short",
    "start:dev": "npm run clean && npm run build && npm run start",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 10",
    "typecheck": "tsc",
    "test": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": "^16",
    "npm": "^8"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "node_modules/*",
      "test/*"
    ],
    "delay": 2500,
    "ext": "js,json"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^0.26.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "elastic-builder": "^2.16.0",
    "googleapis": "^95.0.0",
    "notifications-node-client": "^5.1.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.4",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.8",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-html-reporter": "^3.4.2",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.3.4",
    "nock": "^13.2.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
