{
  "name": "prisoner-content-hub-feedback-exporter",
  "version": "0.0.1",
  "description": "Prisoner Content Hub Feedback Exporter",
  "repository": "git@github.com:ministryofjustice/prisoner-content-hub-feedback-exporter.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "start": "node dist/run.js | bunyan -o short",
    "start:dev": "npm run clean && npm run build && npm run start",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 10",
    "lint-fix": "eslint . --fix",
    "typecheck": "tsc",
    "test": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "clean": "rm -rf dist",
    "migrations": "KNEX_CONFIG=migrations knex migrate:latest --env migrations"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "node_modules/*",
      "test/*"
    ],
    "delay": 2500,
    "ext": "js,json"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.8.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "elastic-builder": "^2.31.0",
    "googleapis": "146.0.0",
    "knex": "^3.1.0",
    "notifications-node-client": "^8.2.1",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.0.1",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.4.3",
    "nock": "^14.0.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2"
  }
}
