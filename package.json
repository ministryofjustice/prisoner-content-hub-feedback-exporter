{
  "name": "prisoner-content-hub-feedback-exporter",
  "version": "0.0.1",
  "description": "Prisoner Content Hub Feedback Exporter",
  "repository": "git@github.com:ministryofjustice/prisoner-content-hub-feedback-exporter.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "start": "node dist/run.js | bunyan -o short",
    "start:dev": "npm run clean && npm run build && npm run start",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 10",
    "typecheck": "tsc",
    "test": "jest",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": "^14",
    "npm": "^6.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "node_modules/*",
      "test/*"
    ],
    "delay": 2500,
    "ext": "js,json"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "elastic-builder": "^2.16.0",
    "googleapis": "^78.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bunyan": "^1.8.6",
    "@types/bunyan-format": "^0.2.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.17.3",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "jest-html-reporter": "^3.4.1",
    "jest-junit": "^12.2.0",
    "lint-staged": "^11.0.0",
    "nock": "^13.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  }
}
