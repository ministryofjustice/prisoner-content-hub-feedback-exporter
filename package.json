{
  "name": "prisoner-content-hub-feedback-exporter",
  "version": "0.0.1",
  "description": "Prisoner Content Hub Feedback Exporter",
  "repository": "git@github.com:ministryofjustice/prisoner-content-hub-feedback-exporter.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "start": "node dist/run.js | bunyan -o short",
    "start:dev": "npm run clean && npm run build && npm run start",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 10",
    "lint-fix": "eslint . --fix",
    "typecheck": "tsc",
    "test": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "node_modules/*",
      "test/*"
    ],
    "delay": 2500,
    "ext": "js,json"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.4",
    "elastic-builder": "^2.23.0",
    "googleapis": "^133.0.0",
    "notifications-node-client": "^8.0.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.2",
    "nock": "^13.5.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2"
  }
}
